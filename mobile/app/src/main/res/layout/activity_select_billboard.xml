<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/img_billboard"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                style="@style/FrameLayout.Category">

                <ImageView
                    android:id="@+id/imageView_billboard"
                    style="@style/ImageView.Category"
                    android:src="@drawable/billboard" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#55000000"
                    android:layout_gravity="bottom|left">

                    <TextView
                        style="@style/TextView.CategoryTitle"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:text="BILLBOARD" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/img_megaboard"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                style="@style/FrameLayout.Category">

                <ImageView
                    android:id="@+id/imageView_megaboard"
                    style="@style/ImageView.Category"
                    android:src="@drawable/megaboard" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#55000000"
                    android:layout_gravity="bottom|left">

                    <TextView
                        style="@style/TextView.CategoryTitle"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:text="MEGABOARD" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/img_citylight"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                style="@style/FrameLayout.Category">

                <ImageView
                    android:id="@+id/imageView_citylight"
                    style="@style/ImageView.Category"
                    android:src="@drawable/citylight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#55000000"
                    android:layout_gravity="bottom|left">

                    <TextView
                        style="@style/TextView.CategoryTitle"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:text="CITYLIGHT" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/img_trojnozka"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                style="@style/FrameLayout.Category">

                <ImageView
                    android:id="@+id/imageView_trojnozka"
                    style="@style/ImageView.Category"
                    android:src="@drawable/trojnozka" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#55000000"
                    android:layout_gravity="bottom|left">

                    <TextView
                        style="@style/TextView.CategoryTitle"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:text="TROJNOŽKA" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/img_hypercube"
                android:layout_marginRight="4dp"
                style="@style/FrameLayout.Category">

                <ImageView
                    android:id="@+id/imageView_hypercube"
                    style="@style/ImageView.Category"
                    android:src="@drawable/hypercube" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#55000000"
                    android:layout_gravity="bottom|left">

                    <TextView
                        style="@style/TextView.CategoryTitle"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:text="HYPERCUBE" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/img_no_idea"
                android:layout_marginLeft="4dp"
                style="@style/FrameLayout.Category">

                <ImageView
                    android:id="@+id/imageView_unknown"
                    style="@style/ImageView.Category"
                    android:src="@drawable/noidea" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#55000000"
                    android:layout_gravity="bottom|left">

                    <TextView
                        style="@style/TextView.CategoryTitle"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:text="ŽIADNY Z UVEDENÝCH" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>