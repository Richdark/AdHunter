<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar.AdHunter</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here -->
    </style>

    <style name="ActionBar.AdHunter" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/adhunter_deep_purple_500</item>
        <item name="android:titleTextStyle">@style/ActionBar.AdHunter.TextStyle</item>
    </style>

    <style name="ActionBar.AdHunter.TextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
