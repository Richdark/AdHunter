<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar.AdHunter</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here -->
    </style>

    <style name="ActionBar.AdHunter" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/adhunter_indigo_500</item>
        <item name="android:titleTextStyle">@style/ActionBar.AdHunter.TextStyle</item>
    </style>

    <style name="ActionBar.AdHunter.TextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FrameLayout" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="FrameLayout.Category">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ImageView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageView.Category">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.CategoryTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
